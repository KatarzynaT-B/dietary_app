<div class='container'>
  <div class='col-md-12'>
    {{#if isAddingRecipe}}
      <button {{action 'toggleAddingRecipe'}} class='btn btn-default btn-lg pull-right'>
        Hide form
      </button>

      <h3>Add new recipe</h3>
      <div class="well well-lg">
        {{recipe-form recipe=newRecipe
                      products=products
                      addDependentResource='addIngredient'
                      saveWithDependentResources='saveRecipeWithIngredients'
                      cancel='cancel'}}
      </div>
    {{else}}
      <button {{action 'toggleAddingRecipe'}} class='btn btn-success btn-lg pull-right'>
        Add new recipe
      </button>
    {{/if}}
  </div>

  <div class='col-md-4'>
    <h3>Available recipes</h3>
    <div class='well well-lg'>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Title</th>
          </tr>
        </thead>
        <tbody>
          {{#each recipe in recipes}}
            <tr>
              <td>{{#link-to 'recipes.recipe' recipe}}{{recipe.title}}{{/link-to}}
                <button {{action 'deleteRecipe' recipe}} class="btn btn-danger pull-right">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class='col-md-8'>
    {{outlet}}
  </div>
</div>