<div class='col-md-6 col-md-offset-3'>
  <form class="form-inline">
    <div class="form-group">
      {{input type='text' value=newProductName class='form-control' placeholder='Name'}}
    </div>
    <div class="form-group">
      {{input type='number' value=newProductFat class='form-control' placeholder='Fat'}}
    </div>
    <div class="form-group">
      {{input type='number' value=newProductCarbs class='form-control' placeholder='Carbs'}}
    </div>
    <div class="form-group">
      {{input type='number' value=newProductProtein class='form-control' placeholder='Proteins'}}
    </div>
    <button type="submit" class="btn btn-success" {{action 'createProduct'}}>Add product</button>
  </form>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Fat</th>
        <th>Carbs</th>
        <th>Proteins</th>
        <th>Calories</th>
      </tr>
    </thead>
    <tbody>
      {{#each product in products}}
        <tr>
          <td>{{product.name}}</td>
          <td>{{product.fat}}</td>
          <td>{{product.carbs}}</td>
          <td>{{product.protein}}</td>
          <td>{{product.calories}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>