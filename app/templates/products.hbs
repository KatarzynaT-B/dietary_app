<div class='col-md-3 col-md-offset-1'>
  <h3>Available products</h3>
  <div class='well well-lg'>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Calories</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each product in products}}
          <tr>
            <td>{{#link-to 'products.product' product}}{{product.name}}{{/link-to}}</td>
            <td>{{product.calories}}</td>
            <td>
              <button {{action 'deleteProduct' product}} class="btn btn-danger">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class='col-md-4'>
  {{outlet}}
</div>

<div class='col-md-3'>
  <h3>Add new product</h3>
  <div class="well well-lg">
    {{product-form product=newProduct
                   saveProductWithUnits='saveProductWithUnits'
                   addUnit='addUnit'
                   cancel='cancel'}}
  </div>
</div>