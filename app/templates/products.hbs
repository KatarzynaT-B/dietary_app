<div class='container'>
  <div class='col-md-12'>
    {{#if isAddingProduct}}
      <button {{action 'toggleAddingProduct'}} class='btn btn-default btn-lg pull-right'>
        Hide form
      </button>
      <h3>Add new product</h3>
      <div class="well well-lg">
        {{product-form product=newProduct
                       saveWithDependentResources='saveProductWithUnits'
                       addDependentResource='addUnit'
                       cancel='cancel'}}
      </div>
    {{else}}
      <button {{action 'toggleAddingProduct'}} class='btn btn-success btn-lg pull-right'>
        Add new product
      </button>
    {{/if}}
  </div>

  <div class='col-md-5'>
    <h3>Available products</h3>
    <div class='well well-lg'>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Calories</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each product in products}}
            <tr>
              <td>{{#link-to 'products.product' product}}{{product.name}}{{/link-to}}</td>
              <td>{{product.calories}}</td>
              <td>
                <button {{action 'deleteProduct' product}} class="btn btn-danger">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class='col-md-7'>
    {{outlet}}
  </div>
</div>